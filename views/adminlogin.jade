doctype html
html(lang='en')
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
   
    title Adminlogin
    // CORE CSS
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.1/css/materialize.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.6.6/angular.min.js', type='text/javascript')
    script(type='text/javascript', src='http://www.google.com/jsapi')
    script(src='js/jquery/jquery-1.8.2.min.js', type='text/javascript')

    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.6.6/angular.min.js', type='text/javascript')
    script(src='javascripts/app.js', type='text/javascript')
    style(type='text/css').
      html,
      body {
      height: 100%;
      }
      html {
      display: table;
      margin: auto;
      }
      body {
      display: table-cell;
      vertical-align: middle;
      }
      .margin {
      margin: 0 !important;
      }
  
  body.teal(ng-app="myApp" ng-controller="myCtrl")
    #login-page.row
      .col.s12.z-depth-6.card-panel
        form.login-form(id="login")
          .row
            .input-field.col.s12.center
              img.responsive-img.valign.profile-image-login(src='images/kritva-logo.png', alt='',style="width:145px;height:36px")
              p.center.login-form-text Custom Module Development Portal
          .row.margin
            .input-field.col.s12
              i.mdi-social-person-outline.prefix
              input#email.validate(type='email')
              label.center-align(for='email', data-error='wrong', data-success='right',ng-model='username') Email
          .row.margin
            .input-field.col.s12
              i.mdi-action-lock-outline.prefix
              input#password(type='password', ng-model='password')
              label(for='password') Password
          .row
            .input-field.col.s12.m12.l12.login-text
              input#remember-me(type='checkbox')
              label(for='remember-me') Remember me
          .row
            .input-field.col.s12(ng-click="authloginadmin()")
              a.btn.waves-effect.waves-light.col.s12 Login
          .row(style="display:none")
            .input-field.col.s6.m6.l6
              p.margin.medium-small
                a(href='register.html') Register Now!
            .input-field.col.s6.m6.l6
              p.margin.right-align.medium-small
                a(href='forgot-password.html') Forgot password?
    script(src='js/bootstrap/bootstrap-transition.js', type='text/javascript')
    script(src='js/bootstrap/bootstrap-alert.js', type='text/javascript')
    script(src='js/bootstrap/bootstrap-modal.js', type='text/javascript')
    script(src='js/bootstrap/bootstrap-dropdown.js', type='text/javascript')
    script(src='js/bootstrap/bootstrap-scrollspy.js', type='text/javascript')
    script(src='js/bootstrap/bootstrap-tab.js', type='text/javascript')
    script(src='js/bootstrap/bootstrap-tooltip.js', type='text/javascript')
    script(src='js/bootstrap/bootstrap-popover.js', type='text/javascript')
    script(src='js/bootstrap/bootstrap-button.js', type='text/javascript')
    script(src='js/bootstrap/bootstrap-collapse.js', type='text/javascript')
    script(src='js/bootstrap/bootstrap-carousel.js', type='text/javascript')
    script(src='js/bootstrap/bootstrap-typeahead.js', type='text/javascript')
    script(src='js/bootstrap/bootstrap-affix.js', type='text/javascript')
    script(src='js/bootstrap/bootstrap-datepicker.js', type='text/javascript')
    script(src='js/jquery/jquery-tablesorter.js', type='text/javascript')
    script(src='js/jquery/jquery-chosen.js', type='text/javascript')
    script(src='js/jquery/virtual-tour.js', type='text/javascript')
    script(src='js/app.js', type='text/javascript')
    script(src='js/calender.js', type='text/javascript')
